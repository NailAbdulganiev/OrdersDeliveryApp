@model OrdersDeliveryApp.Services.DTOs.OrderDto

<h1>Create New Order</h1>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Sender City</label>
        <input asp-for="SenderCity" class="form-control" />
        <span asp-validation-for="SenderCity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Sender Address</label>
        <input asp-for="SenderAddress" class="form-control" />
        <span asp-validation-for="SenderAddress" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Receiver City</label>
        <input asp-for="ReceiverCity" class="form-control" />
        <span asp-validation-for="ReceiverCity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Receiver Address</label>
        <input asp-for="ReceiverAddress" class="form-control" />
        <span asp-validation-for="ReceiverAddress" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Weight</label>
        <input asp-for="Weight" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Pickup Date</label>
        <input asp-for="PickupDate" type="date" class="form-control" />
        <span asp-validation-for="PickupDate" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

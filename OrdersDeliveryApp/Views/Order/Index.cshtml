@model IEnumerable<OrdersDeliveryApp.Services.DTOs.OrderDto>

<h1>Orders List</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<table class="table table-striped">
    <thead>
    <tr>
        <th>Order Number</th>
        <th>Sender City</th>
        <th>Receiver City</th>
        <th>Weight</th>
        <th>Pickup Date</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var order in Model.OrderByDescending(o => o.OrderNumber))
    {
        <tr>
            <td>@order.OrderNumber</td>
            <td>@order.SenderCity</td>
            <td>@order.ReceiverCity</td>
            <td>@order.Weight</td>
            <td>@order.PickupDate.ToShortDateString()</td>
            <td>
                <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-primary btn-sm">View</a>
                <a asp-action="Create" class="btn btn-success btn-sm">Create</a>
            </td>
        </tr>
    }
    </tbody>
</table>